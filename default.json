{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": ["config:base"],
  "ignoreDeps": ["herpism"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "major": {
    "stabilityDays": 14
  },
  "minor": {
    "stabilityDays": 7
  },
    "packageRules": [
    {
      "allowedVersions": "/^(12|14|16)\\./",
      "groupName": "Node.js",
      "matchPackageNames": ["node"]
    }
  ],
  "patch": {
    "groupName": "dependencies (patch)",
    "groupSlug": "patch",
    "stabilityDays": 3
  },
  "platformAutomerge": true,
  "prCreation": "not-pending",
  "separateMultipleMajor": true,
  "timezone": "Asia/Tokyo",
  "updateInternalDeps": true
}
